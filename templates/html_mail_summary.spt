#extends _html_mail_base
#extends _rsvp
#extends _results

#def html
Hi $fb_user.profile.first_name,

<p>See <a href="http://www.dancedeets.com/">live up-to-date version</a> of the below events.

<p>If you think your friends would like to know about Dance Deets, you can <a href="http://www.dancedeets.com/share">share Dance Deets on Facebook</a>.

<p>
#for $group in $grouped_results
	#if $group.results
		<div><b>$group.name</b></div>
		$render_results($group.results, use_rsvp_form=False)
	#end if
#end for

#if $new_dance_events
	If any of your events are for street/choreo dancers, please add them to Dance Deets:<br>
	<ul>
	#for $fb_event in $new_dance_events
	<li><a href="http://www.dancedeets.com/events/add?event_id=$fb_event['info']['id']">$fb_event['info']['name']</a>
	#end for
	</ul>
#end if

<p>To unsubscribe, change your location, or choose choreo-vs-freestyle events, <a href="http://www.dancedeets.com/user/edit">change your Dance Deets settings.</a>
#end def

